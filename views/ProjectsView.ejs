<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>PROJECTS</title>
    <link rel="stylesheet" href="/projects.css">
    <link rel="stylesheet" href="assets/css/loginpage.css">
    <link rel= "stylesheet" href ="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <div class="header-nav"> 
    
        <p style="color:white">Welcome, <%= user.charAt(0).toUpperCase() + user.slice(1) %></p>
       
        <ul>
          <li><a style="color:whitesmoke" href="/users/logout">Log out</a></li>
        </ul>
      </div>
      <p>PROJECT(s)</p>
    </header>

      
    <main>
      <ul class="list">
        <ul>
          <% if(messages.error) { %>
            <div class="error-msg">
              <i class="fa fa-times-circle">
          <li><%= messages.error %></li>
        </i>
          <% } %>
        </ul>
        <ul>
          <% if(messages.success_msg) { %>
            <div class="success-msg">
              <i class="fa fa-check">
          <li><%= messages.success_msg %></li>
             </i>
          <% } %>
        </div>
        </ul>
        <% projects.forEach(project => { %>
          <li>
            <!-- Display the members only badge when the article.category is limited -->
            <% if (project.department) {%>
              <i style="background-color:rgba(22,34,57,0.99)"><%= project.department %></i>
            <% } %>
            <% if (project.level) {%>
                <i style="background-color:rgba(22,34,57,0.99)"><%=project.level %></i>
              <% } %>
            <h2><%= project.title %></h2>
            <p><%= project.summary %></p>
            <br></br>
            <a href="/users/projects/<%= project.id %>" style ="float: right;">Read more</a>

            <div class="delete-method">
              <form method="post" action="/delete/<%= project.id %>?_method=DELETE">
                <input type="submit" value="Delete">
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
