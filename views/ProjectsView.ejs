<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>PROJECTS</title>
    <link rel="stylesheet" href="/projects.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <div class="header-nav"> 
    
        <p style="color:white">Welcome, <%= user.charAt(0).toUpperCase() + user.slice(1) %></p>
       
        <ul>
          <li><a style="color:whitesmoke" href="/users/logout">Log out</a></li>
        </ul>
      </div>
      <p>PROJECT(s)</p>
    </header>

    <ul>
        <% if(messages.success_msg) { %>
        <li><%= messages.success_msg %></li>
        <% } %>
      </ul>
      <ul>
        <% if(messages.error) { %>
        <li><%= messages.error %></li>
        <% } %>
      </ul>
      
    <main>
      <ul class="list">
        <% projects.forEach(project => { %>
          <li>
            <!-- Display the members only badge when the article.category is limited -->
            <% if (project.department) {%>
              <i style="background-color:rgba(22,34,57,0.99)"><%= project.department %></i>
            <% } %>
            <% if (project.level) {%>
                <i style="background-color:rgba(22,34,57,0.99)"><%=project.level %></i>
              <% } %>
            <h2><%= project.title %></h2>
            <p><%= project.summary %></p>
            <a href="/users/projects/<%= project.id %>">Read more</a>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
